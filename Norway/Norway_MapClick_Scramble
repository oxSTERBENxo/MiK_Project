    // Modify map data after loading
    simplemaps_europemap_mapdata.main_settings.click_handler = "function(id){ handleCountryClick(id); }";
    simplemaps_europemap_mapdata.main_settings.popups = "none"; // üëà disables country popups

    const correctCountry = "NO"; // Country code for Norway

    function handleCountryClick(id) {
      if (id === correctCountry) {
        simplemaps_europemap.setStateColor(id, "#4CAF50"); // green
        alert("üéâ –¢–æ—á–Ω–æ! –õ—É–∫–∞ –µ –≤–æ –ù–æ—Ä–≤–µ—à–∫–∞!");
